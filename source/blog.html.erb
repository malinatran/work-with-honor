---
section: blog
---

<% content_for :header_logo do %>
  <span>Blog</span>
<% end %>

<% content_for :header do %>
  <b class="category">Inspiration</b>
  <h1>A New Founder Q&A with <br/>Breather Founder Jake Figerman.</h1>
  <h2>The founder of Breather shares his thoughts and ideas in our latest Q&A series.</h2>
  <div class="author">
    <%= image_tag 'assets/img_author.png' %>
    Louse Dreier / June 17, 2015
  </div>
<% end %>

<div class="section blog featured">

  <div class="container alt">

    <div class="categories">
      <% data.site.blog_categories.each_with_index do |category, index| %><a href="#" class="<%= index == 0 ? 'active' : ''%>"><%= category %></a><% end %>
    </div>

    <h4>Featured Articles</h4>
    <div class="grid padded-10">

      <!--Entry-->
      <% featured_posts().each do |post| %>

      <div class="col-6">

        <a class="card" href="<%= post_link(post) %>">
          <%= post_image(post) %>
          <div class="description">
            <span>
              Read Article
              <span class="icon chevron-small-right"></span>
            </span>
          </div>
        </a>

        <span class="category"><%= post.fragments['category'].value %></span>

        <h5><a href="<%= post_link(post) %>"><%= post.fragments['smalltitle'].value %></a></h5>

        <%= post.fragments['excerpt'].as_html(nil) %>

        <span class="date"><a><%= post_author(post).fragments['name'].value %></a> / <%= pretty_date(post.fragments['date'].value) %></span>

      </div>

      <% end %>

    </div>
  </div>
</div>

<div class="section blog">
  <div class="container alt">
    <h4>Latest Articles</h4>
    <div class="grid padded-10">

      <!--Entry-->
      <% data.posts.each do |id, post| %>
      <div class="col-4">
        <div class="card">
          <%= post_image(post) %>
          <div class="description">
            <span>
              Read Article
              <span class="icon chevron-small-right"></span>
            </span>
          </div>
        </div>
        <span class="category"><%= post.fragments['category'].value %></span>
        <h5><a href="<%= post_link(post) %>"><%= post.fragments['smalltitle'].value %></a></h5>
        <%= post.fragments['excerpt'].as_html(nil) %>
        <span class="date"><a><%= post_author(post).fragments['name'].value %></a> / <%= pretty_date(post.fragments['date'].value) %></span>
      </div>
      <% end %>

    </div>
  </div>

  <div class="banner">
    <a href="<%= url_for('/blog') %>">
      <span class="icon grid"></span>
      View More Articles
    </a>
  </div>
</div>
