<!--Featured works-->
<div class="section work featured">

  <div class="container alt">

    <h4>View More Of Our Work</h4>

    <div class="grid padded-5">

      <!--Row 1-->
      <% latest_works().each do |latest_post| %>
      <div class="entry col-6">
        <a class="card" href="<%= work_link(latest_post) %>">
          <%= post_image(latest_post, 'thumbnail') %>
          <div class="description">
            <span>
              <%= post.fragments['card_image'].as_html(nil) %>
              <%= post.fragments['card_text'].value %>
            </span>
          </div>
        </a>
      </div>
      <% end %>

    </div>

  </div>

  <div class="banner small">
    <a href="<%= url_for('/work') %>">
      <span class="icon grid"></span>
      Back to All Work
    </a>
  </div>

</div>
