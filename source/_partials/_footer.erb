<footer>

  <% if !defined?(contact_banner) %>
  <!--Contact banner-->
  <a href="<%= url_for('/contact') %>" class="banner">
    Got a fresh idea? Lets work together.
    <span class="icon chevron-small-right"></span>
  </a>
  <% end %>

  <!--Menu-->
  <nav>
    <div class="container">
      <% data.site.pages.each do |page| %>
      <%= link_to(page, page != "Home" ? "/#{page.downcase}" : '/') %>
      <% end %>
    </div>
  </nav>

  <!--Contact Us-->
  <div class="contact">
    <h3>Contact Us</h3>
    <a href="mailto:<%= data.site.email %>"><%= data.site.email %></a>
  </div>

  <!--Newsletter form-->
  <div class="newsletter">

    <div class="container">

      <b class="is-newsletter_header">Subscribe and Receive the Latest in Business and Branding Advice</b>

      <div class="collapsed">
        <b>Subscribe to our Newsletter</b>
      </div>

      <form action="//workwithhonor.us12.list-manage.com/subscribe/post?u=4c2c517d365e3a6ec67386ad8&amp;id=cd31b9a276" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="mailchimp_iframe" novalidate>
        <div id="mc_embed_signup_scroll">

        <!--Name field-->
        <div class="mc-field-group field name">
          <label for="mce-FIRSTNAME">First Name </label>
          <input type="text" name="FIRSTNAME" id="mce-FIRSTNAME">
        </div>

        <!--Email field-->
        <div class="mc-field-group field email">
          <label for="mce-EMAIL">Email Address </label>
          <input type="email" name="EMAIL" class="required email" id="mce-EMAIL">
        </div>

        <button type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">Sign Up</button>

        <!--Social Links-->
        <%= partial 'social' %>

        <div id="mce-responses" class="clear">
          <div class="response" id="mce-error-response" style="display:none"></div>
          <div class="response" id="mce-success-response" style="display:none"></div>
        </div>
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input type="text" name="b_4c2c517d365e3a6ec67386ad8_cd31b9a276" tabindex="-1" value="">
        </div>

        </div>
      </form>

    </div>

  <iframe name="mailchimp_iframe" class="hidden"></iframe>
  </div>

  <!--Legend-->
  <div class="legend">
    <div class="grid container">
      <p class="col-2 text">#workwithhonor</p>
      <a class="col-2 text" href="mailto:hello@workwithhonor.com" target="_top">hello@workwithhonor.com</a>
      <span class="col-4 center-text">
        &copy;<%= Time.now.year %> Honor Roll L.L.C.
        <span class="logo"></span>
        All Rights Reserved.
      </span>
      <a class="text" href="<%= url_for('/privacy') %>">Privacy Policy</a>
      <a class="col-2 text" href="<%= url_for('/terms') %>">Terms of Service</a>
    </div>
  </div>

</footer>
