<footer>

  <% if !defined?(contact_banner) %>
  <!--Contact banner-->
  <a href="<%= url_for('/contact') %>" class="banner">
    Got a fresh idea? Lets work together.
    <span class="icon chevron-small-right"></span>
  </a>
  <% end %>

  <!--Menu-->
  <nav>
    <div class="container">
      <% data.site.pages.each do |page| %>
      <%= link_to(page, page != "Home" ? "/#{page.downcase}" : '/') %>
      <% end %>
    </div>
  </nav>

  <!--Contact Us-->
  <div class="contact">
    <h3>Contact Us</h3>
    <a href="mailto:<%= data.site.email %>"><%= data.site.email %></a>
  </div>

  <!--Newsletter form-->
  <div class="newsletter">

    <div class="container">

      <b class="is-newsletter_header">Subscribe and Receive the Latest in Business and Branding Advice</b>

      <div class="collapsed">
        <b>Subscribe to our Newsletter</b>
      </div>

      <form action="<%= data.site.api %>">

        <input type="hidden" name="action" value="subscribe">

        <!--Name field-->
        <div class="field name">
          <label>First Name</label>
          <input id="first_name" name="first_name" type="text" required>
        </div>

        <!--Email field-->
        <div class="field email">
          <label>Email Address</label>
          <input id="subscription_email" name="email" type="email" required>
        </div>

        <button>Sign Up</button>

      </form>

      <!--Social Links-->
      <%= partial 'social' %>

    </div>

  </div>

  <!--Legend-->
  <div class="legend">
    <div class="container">
      &copy;<%= Time.now.year %> Honor Roll L.L.C.
      <span class="logo"></span>
      All Rights Reserved.
      <a class="privacy" href="<%= url_for('/privacy') %>">Privacy Policy</a>
    </div>
  </div>

</footer>
