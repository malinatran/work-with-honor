---
section: post
---

<% if post.fragments['smalltitle'] %>
  <% content_for :header_logo do %>
    <span>Blog / <%= post.fragments['smalltitle'].value %></span>
  <% end %>
<% end %>

<% if post.fragments['background'] %>
  <% content_for :header do %>
    <%= post.fragments['background'].as_html(nil) %>
  <% end %>
<% end %>

<div class="section post">

  <!--Post info-->
  <div class="container info">
    <span class="category"><%= post.fragments['category'].value %></span>
    <%= post.fragments['title'].as_html(nil) %>
    <%= post.fragments['subtitle'].as_html(nil) %>
    <div class="author">
      <%= author.fragments['image'].as_html(nil) %>
      <span><%= author.fragments['name'].value %></span> / <%= pretty_date(post.fragments['date'].value) %>
    </div>
    <div class="footer">
      <div class="sharebar">
        Share
        <a href="" class="icon mail"></a>
        <a href="" class="icon facebook"></a>
        <a href="" class="icon twitter"></a>
        <a href="" class="icon linkedin"></a>
      </div>
      <div class="comments"><span>0</span> Comments</div>
    </div>
  </div>

  <div class="container body">

    <%= post.fragments['body'].as_html(nil) %>

    <div class="footer">
      <div class="sharebar">
        Share
        <a href="" class="icon mail"></a>
        <a href="" class="icon facebook"></a>
        <a href="" class="icon twitter"></a>
        <a href="" class="icon linkedin"></a>
      </div>
      <div class="tags">
        Tags:
        <% post.tags.each do |tag| %>
          <a href=""><%= tag %></a>
        <% end %>
      </div>
      <div class="author">
        <%= image_tag(author.fragments['image'].main.url) %>
        <h4><a><%= author.fragments['name'].value %></a></h4>
        <%= author.fragments['description'].as_html(nil) %>
        <p><a class="viewmore">See More Articles By <%= author.fragments['name'].value %></a></p>
      </div>
    </div>

  </div>

</div>

<div class="section blog featured">

  <div class="container alt">

    <h4>Recent Stories</h4
    >
    <!--Featured posts-->
    <div class="grid padded-30">

      <% latest_posts(data.posts).each do |latest_post| %>

      <!--Entry-->
      <div class="col-6">

        <a class="card" href="<%= post_link(latest_post) %>">
          <%= post_image(latest_post) %>
          <div class="description">
            <span>
              Read Article
              <span class="icon chevron-small-right"></span>
            </span>
          </div>
        </a>

        <span class="category"><%= latest_post.fragments['category'].value %></span>

        <h5><a href="<%= post_link(latest_post) %>"><%= latest_post.fragments['smalltitle'].value %></a></h5>

        <%= latest_post.fragments['excerpt'].as_html(nil) %>

        <span class="date"><a><%= post_author(latest_post).fragments['name'].value %></a> / <%= pretty_date(latest_post.fragments['date'].value) %></span>

      </div>

      <% end %>

    </div>
  </div>

  <!--Back banner-->
  <div class="banner">
    <a href="<%= url_for('/blog') %>">
      <span class="icon grid"></span>
      Back to Blog
    </a>
  </div>

</div>

