<footer>

  <% if !defined?(contact_banner) %>
  <!--Contact banner-->
  <div class="banner">
    <a href="<%= url_for('/contact') %>">
      Got a fresh idea? Lets work together.
      <span class="icon chevron-small-right"></span>
    </a>
  </div>
  <% end %>

  <!--Menu-->
  <nav>
    <div class="container">
      <% data.site.pages.each do |page| %>
      <%= link_to(page, "/#{page.downcase}") %>
      <% end %>
    </div>
  </nav>

  <!--Newsletter form-->
  <div class="newsletter">

    <div class="container">

      <b>Subscribe and Receive the Latest in Business and Branding Advice</b>

      <form>

        <!--Name field-->
        <div class="field name">
          <label>First Name</label>
          <input name="first_name" type="text">
        </div>

        <!--Name field-->
        <div class="field lastname">
          <label>Last Name</label>
          <input name="last_name" type="text">
        </div>

        <!--Email field-->
        <div class="field email">
          <label>Email Address</label>
          <input name="email" type="email">
        </div>

        <button>Sign Up</button>

      </form>

      <!--Social Links-->
      <%= partial 'social' %>

    </div>

  </div>

  <!--Legend-->
  <div class="legend">
    &copy;<%= Time.now.year %> Honor Roll L.L.C.
    <span class="logo"></span>
    All Rights Reserved.
  </div>

</footer>
