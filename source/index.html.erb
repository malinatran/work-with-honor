<% content_for :header do %>

  <!--Collapsed content-->
  <div class="collapsed">
    <h1>Building Better Brands</h1>
    <h2>Branding for forward-thinking companies and entrepreneurs</h2>
    <a class="button" href="<%= url_for('/work') %>">View Our Work</a>
  </div>

  <!--Work entries-->
  <div class="slider controlsalt is-smallbreadcrumbs" data-controls="border" data-breadcrumbs="true">

  <% latest_works(2).each_with_index do |post, index| %>

  <div class="slide entry" style="background-image: url(<%= resource_image_url(post, 'featured_image') %>);" data-slidr="<%= index %>">

    <div class="body">
      <%= post.fragments['title'].as_html(nil) %>
      <%= post.fragments['subtitle'].as_html(nil) %>
      <a class="button" href="<%= work_link(post) %>">View this Project</a>
    </div>

  </div>

  <% end %>

  </div>

<% end %>

